<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for each individual to-do item -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Checkbox for marking the task as completed -->
    <CheckBox
        android:id="@+id/checkBoxCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- TextView for displaying the task title -->
    <TextView
        android:id="@+id/todoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- View to display the priority indicator (a colored circle) -->
    <View
        android:id="@+id/priorityIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle" />

    <!-- Button for deleting the task -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless" />
</LinearLayout>